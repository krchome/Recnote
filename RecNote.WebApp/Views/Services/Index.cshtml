@model IEnumerable<RecNote.WebApp.Models.Service>

@{
    ViewBag.Title = "Index";
}

@*<script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>*@


<h2>Index</h2>



   <fieldset>
    <legend>Services by Service Types</legend>
    <div>
        @Html.DropDownList("Servicetypes", "Select a type...")
    </div>
    <br />
    <div id="target">
    </div>
    <div id="log">
         </div>
   
</fieldset>

  @section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#Servicetypes").change(function (e) {

                var services = { "ServiceType": $(this).val() };
                $.ajax({
                    type: 'get',
                    url: '@Url.Action("ServicesByServiceTypesPartial")',
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'html',
                    data: { "ServiceType": $(this).val() },
                    success: function (result) {

                        $("#target").html(result);
                    },
                    error: function (ex) {
                        alert("Error It is");
                    }
                });

            });

        });
    </script>
}

